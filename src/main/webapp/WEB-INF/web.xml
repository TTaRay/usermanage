<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xmlns="http://java.sun.com/xml/ns/javaee"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_2_5.xsd" version="2.5">
  <servlet>
    <servlet-name>indexcontroller</servlet-name>
    <servlet-class>com.citywy.controller.IndexController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>indexcontroller</servlet-name>
    <url-pattern>/index.htm</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>NewsController</servlet-name>
    <servlet-class>com.citywy.controller.NewsController</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>NewsController</servlet-name>
    <url-pattern>/news/list.htm</url-pattern>
  </servlet-mapping>
  <error-page>
    <error-code>500</error-code>
    <!--location相对于webapp根/上下文,这说明它必须以一个斜线开头-->
    <location>/admin/public/error-500.jsp</location>
  </error-page>

  <welcome-file-list>
    <welcome-file>index.jsp</welcome-file>
  </welcome-file-list>
</web-app>
